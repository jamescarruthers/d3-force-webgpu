{
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 12
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "GPUBufferUsage": "readonly",
    "GPUShaderStage": "readonly",
    "GPUMapMode": "readonly"
  },
  "rules": {
    "no-cond-assign": 0,
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}
